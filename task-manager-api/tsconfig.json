{
  "compilerOptions": {
    /* ========== 路径配置 ========== */
    "rootDir": "./src",
    "outDir": "./dist",

    /* ========== 目标环境 ========== */
    "target": "ES2020",
    "module": "CommonJS",  
    "lib": ["ESNext"],
    "types": ["node"],     
    "esModuleInterop": true,

    /* ========== 输出选项 ========== */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* ========== 类型检查 ========== */
    "strict": true,
    "skipLibCheck": true,

    /* ========== 其他 ========== */
    "moduleDetection": "force",
    "isolatedModules": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
